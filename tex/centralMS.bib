  file = {arXiv\:1707.07693 PDF:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/SHJRI3GX/Ogiya and Hahn - 2017 - What sets the central structure of dark matter hal.pdf:application/pdf;arXiv.org Snapshot:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/NKAFQPKT/1707.html:text/html},
