  file = {arXiv\:1707.06233 PDF:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/E4AR9B5R/Bruderer et al. - 2017 - Cosmic shear calibration with forward modeling.pdf:application/pdf;arXiv.org Snapshot:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/V6Z5QSM8/1707.html:text/html},
