  keywords = {cosmological parameters,galaxies: haloes,galaxies: statistics,gravitation,large-scale structure of Universe},
  pages = {1913--1927},
  file = {NASA/ADS Full Text PDF:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/BM9CAI7P/Reid and White - 2011 - Towards an accurate model of the redshift-space cl.pdf:application/pdf}
