  pages = {705--717},
  file = {NASA/ADS Full Text PDF:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/XGXI6SCT/Schneider and Hartlap - 2009 - Constrained correlation functions.pdf:application/pdf},
