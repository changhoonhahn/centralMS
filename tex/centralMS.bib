@article{baldauf2016,
  title = {{{LSS}} Constraints with Controlled Theoretical Uncertainties},
  volume = {1602},
  abstract = {Forecasts and analyses of cosmological observations often rely on the assumption of a perfect theoretical model over a defined range of scales. We explore how model uncertainties and nuisance parameters in perturbative models of the matter and galaxy spectra affect constraints on neutrino mass and primordial non-Gaussianities. We provide a
consistent treatment of theoretical errors and argue that their
inclusion is a necessary step to obtain realistic cosmological
