  pages = {22--35},
  file = {NASA/ADS Full Text PDF:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/RFASWBJ5/Tegmark et al. - 1997 - Karhunen-Loève Eigenvalue Problems in Cosmology H.pdf:application/pdf}
