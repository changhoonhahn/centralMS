  pages = {721--731},
  file = {NASA/ADS Full Text PDF:/Users/chang/Library/Application Support/Zotero/Profiles/lkt25p6f.default/zotero/storage/ZEEXTCGG/Eifler et al. - 2009 - Dependence of cosmic shear covariances on cosmolog.pdf:application/pdf},
  groups = {nonGaussL}
}

