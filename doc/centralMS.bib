  keywords = {cosmology: observations,galaxies: haloes,large-scale structure of Universe},
  pages = {3720-3741},
  file = {/Users/ChangHoon/Zotero/storage/6XWPAV7W/Tojeiro et al. - 2017 - Galaxy and Mass Assembly (GAMA) halo formation ti.pdf}
}

@article{carnall2018,
  archivePrefix = {arXiv},
  eprinttype = {arxiv},
  eprint = {1811.03635},
