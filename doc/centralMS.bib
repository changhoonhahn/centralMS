  eprinttype = {arxiv},
  eprint = {1708.04892},
  primaryClass = {astro-ph},
  title = {Accurate {{Modelling}} of {{Galaxy Clustering}} on {{Small Scales}}: {{Testing}} the {{Standard}} \$$\backslash${{Lambda}}$\backslash$mathrm\{\vphantom\}{{CDM}}\vphantom\{\}\$ + {{Halo Model}}},
