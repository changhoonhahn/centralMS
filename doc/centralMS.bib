@article{leja2017,
  title = {Deriving {{Physical Properties}} from {{Broadband Photometry}} with {{Prospector}}: {{Description}} of the {{Model}} and a {{Demonstration}} of Its {{Accuracy Using}} 129 {{Galaxies}} in the {{Local Universe}}},
