  keywords = {cosmology: theory,galaxies: evolution,galaxies: formation,methods: numerical,galaxies: star formation,galaxies: starburst},
  pages = {3548-3563},
  file = {/Users/ChangHoon/Zotero/storage/9IRBBKR6/Sparre et al. - 2015 - The star formation main sequence and stellar mass .pdf}
}

