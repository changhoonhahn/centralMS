  author = {Crain, Robert A. and Schaye, Joop and Bower, Richard G. and Furlong, Michelle and Schaller, Matthieu and Theuns, Tom and Dalla Vecchia, Claudio and Frenk, Carlos S. and McCarthy, Ian G. and Helly, John C. and Jenkins, Adrian and {Rosas-Guevara}, Yetli M. and White, Simon D. M. and Trayford, James W.},
  month = jun,
  year = {2015},
  keywords = {cosmology: theory,galaxies: evolution,galaxies: haloes,galaxies: formation},
  pages = {1937-1961},
  file = {/Users/ChangHoon/Zotero/storage/UZCD2J6F/Crain et al. - 2015 - The EAGLE simulations of galaxy formation calibra.pdf}
}

